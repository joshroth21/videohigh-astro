---
import BaseLayout from "../layouts/BaseLayout.astro";
import EpisodePost from "../components/EpisodePost.astro";
const allEpisodes = await Astro.glob("../pages/episodes/*.md");
---

<BaseLayout>
  <ul class="grid grid-cols-3 gap-4">
    {
      allEpisodes
        .reverse()
        .map((episode) => (
          <EpisodePost data={episode.frontmatter} url={episode.url} />
        ))
    }
  </ul>
</BaseLayout>
