---
import BaseLayout from "../layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="flex">
    <div class="w-1/3 mr-8">
      <img
        class="shadow-md"
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
      />
      <ul class="list-disc ml-4 mt-4">
        <li>
          <a
            class="text-slate-500 underline hover:text-slate-800"
            href={frontmatter.movieLinks.lbx}
            target="_blank">Letterboxd</a
          >
        </li>
        <li>
          <a
            class="text-slate-500 underline hover:text-slate-800"
            href={frontmatter.movieLinks.imdb}
            target="_blank">IMDB</a
          >
        </li>
      </ul>
    </div>
    <div class="w-2/3">
      <h1 class="text-2xl font-semibold">{frontmatter.title}</h1>
      <h2 class="text-slate-500">{frontmatter.pubDate.slice(0, 10)}</h2>
      <p class="my-4"><slot /></p>
      <div class="my-4 p-4 bg-slate-100 rounded">
        <ul class="list-none flex gap-4">
          <li>
            <a
              class="text-slate-500 underline hover:text-slate-800"
              href={frontmatter.episodeLink.apple}
              target="_blank">Apple Podcasts</a
            >
          </li>
          <li>
            <a
              class="text-slate-500 underline hover:text-slate-800"
              href={frontmatter.episodeLink.spotify}
              target="_blank">Spotify</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
