---
import { Image } from "astro:assets";
const { href, icon, text } = Astro.props;
---

<a
  class="bg-slate-500 hover:bg-slate-300 py-2 px-4 transition-all rounded-lg shadow-sm flex items-center"
  href={href}
  target="_blank"
>
  <Image class="mr-2" src={icon} alt={text} height={20} width={20} />
  <span class="font-semibold">{text}</span>
</a>
